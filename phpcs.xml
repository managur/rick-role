<?xml version="1.0"?>
<ruleset name="Rick-Role Custom Ruleset">
    <description>Custom ruleset for Rick-Role with snake_case allowed in tests</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Include Slevomat coding standard for strict comparisons and no ! operator -->
    <rule ref="SlevomatCodingStandard.Operators.DisallowEqualOperators"/>

    <!-- Temporarily disable because of promoting asymmetric constructor parameters-->
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.Indent"/>
    </rule>

    <!-- Allow snake_case method names in tests directory -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <!-- Scan src and tests directories -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor and other directories -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>coverage/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- Show source codes in all reports -->
    <arg value="s"/>

    <!-- Show sniff codes in all reports -->
    <arg value="n"/>
</ruleset> 